{
        "manifest_version": 2,
        "name": "Themer",
        "version": "1.0",
        "description": "Switch between installed themes without restarting Firefox",
        "permissions": ["management", "theme"],
        "browser_action": {
                "default_popup": "popup.html",
                "default_icon": {
                        "48": "icon.png"
                }
        },
        "browser_specific_settings": {
                "gecko": {
                        "id": "themer@example.com",
                        "strict_min_version": "91.0"
                }
        },
        "background": {
                "scripts": ["background.js"]
        }
}
