{
  "manifest_version": 2,
  "name": "Theme Switcher",
  "version": "1.0",
  "description": "Switch between installed themes without restarting Firefox.",
  "permissions": ["management", "theme"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  }
}
